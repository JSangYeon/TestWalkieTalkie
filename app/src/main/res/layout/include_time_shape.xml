<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="startPoint"
            type="java.lang.Boolean" />
        <variable
            name="endPoint"
            type="java.lang.Boolean" />

        <variable
            name="hourMinute"
            type="java.lang.String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@{hourMinute}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_circle"
            app:layout_constraintBottom_toBottomOf="@id/view_circle"/>
        <View
            android:id="@+id/view_top_line"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:visibility="@{startPoint ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="@+id/view_circle"
            app:layout_constraintEnd_toEndOf="@+id/view_circle"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/view_circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_circle"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/tv_time"
            app:layout_constraintTop_toBottomOf="@id/view_top_line"/>

        <View
            android:id="@+id/view_bottom_line"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:visibility="@{endPoint ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="@+id/view_circle"
            app:layout_constraintEnd_toEndOf="@+id/view_circle"
            app:layout_constraintTop_toBottomOf="@id/view_circle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>